@{
    ViewBag.Title = "WeeClaims";
}

@Styles.Render("~/Content/cssForm")
<div class="row">
    <div class="col-md-6">
      
        <img class="img-responsive"  src="~/img/logoWeeClaims.png" />

    </div>
        <div class="col-md-6">
            <h2>Registro para participantes</h2>
            <form id="registroParticipantesForm">
                <div class="form-group">
                    <input type="text" class="form-control input-lg" name="inputNombreCompania" id="inputNombreCompania" placeholder="Nombre de la compañia" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-lg" name="inputCedula" id="inputCedula" placeholder="Cedula" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-lg" name="inputNombreContacto" id="inputNombreContacto" placeholder="Nombre de la person para contacto" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-lg" name="inputTitutlo" id="inputTitutlo" placeholder="Titulo" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control input-lg" name="inputEmail" id="inputEmail" placeholder="Correo electrónico" required>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control input-lg" name="inputTelefono" id="inputTelefono" placeholder="Teléfono" required>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="gridCheck" id="gridCheck"> He leído y acepto el <a src="#"> de privacidad /Terminos y condiciones</a>
                    </div>
                </div>
                <div style="text-align: center; padding-top:30px;">
                    <button type="submit" class="btn btn-info btn-lg" id="btnEnviar" disabled>Continuar</button>
                </div>
            </form>
        </div>
    </div>



<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body" style="text-align: center">
                <div id="resEstatus" class="respuestaBack"></div>
                <div id="resEstatusError" class="respuestaBack"></div>
                <div id="resNombreCompania" class="respuestaBack"></div>
                <div id="resCedula" class="respuestaBack"></div>
                <div id="resNombreContacto" class="respuestaBack"></div>
                <div id="resTitutlo" class="respuestaBack"></div>
                <div id="resEmail" class="respuestaBack"></div>
                <div id="resTelefono" class="respuestaBack"></div>
                <div id="errorBackend" class="respuestaBack"></div>
                <button type="button" class="btn btn-info btn-lg" id="mostrarTabla">Aceptar</button>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/formRegistro")
